<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to restaurants_path, class: "text-decoration-none" do %>
        <i class="fas fa-utensils me-1"></i>Restaurants
      <% end %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">New Restaurant</li>
  </ol>
</nav>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">
          <i class="fas fa-plus me-2"></i>Add New Restaurant
        </h3>
      </div>
      <div class="card-body">
        <%= simple_form_for @restaurant, html: { class: "needs-validation", novalidate: true } do |f| %>
          <div class="mb-3">
            <%= f.input :name, 
                input_html: { class: "form-control form-control-lg" },
                wrapper_html: { class: "form-floating mb-3" },
                placeholder: "Restaurant Name" %>
          </div>
          
          <div class="mb-3">
            <%= f.input :address, 
                input_html: { class: "form-control form-control-lg" },
                wrapper_html: { class: "form-floating mb-3" },
                placeholder: "Full Address" %>
          </div>
          
          <div class="mb-4">
            <%= f.input :category, 
                collection: Restaurant::CATEGORIES, 
                label_method: :capitalize,
                input_html: { class: "form-select form-select-lg" },
                include_blank: "Select a category..." %>
          </div>
          
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to restaurants_path, class: "btn btn-outline-secondary btn-lg me-md-2" do %>
              <i class="fas fa-times me-2"></i>Cancel
            <% end %>
            <%= f.submit "Create Restaurant", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

