<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-4 fw-bold text-primary">
    <i class="fas fa-utensils me-2"></i>Restaurants
  </h1>
  <%= link_to new_restaurant_path, class: 'btn btn-primary btn-lg' do %>
    <i class="fas fa-plus me-2"></i>Add Restaurant
  <% end %>
</div>

<% if @restaurants.any? %>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %>
            </h5>
            <p class="card-text">
              <i class="fas fa-map-marker-alt text-muted me-1"></i>
              <%= restaurant.address %>
            </p>
            <p class="card-text">
              <span class="badge bg-secondary text-capitalize">
                <%= restaurant.category %>
              </span>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <i class="fas fa-star text-warning"></i>
                <%= restaurant.reviews.count %> reviews
              </small>
              <%= link_to "View", restaurant_path(restaurant), class: "btn btn-outline-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="fas fa-utensils text-muted mb-3" style="font-size: 4rem;"></i>
    <h3 class="text-muted">No restaurants yet</h3>
    <p class="text-muted">Be the first to add a restaurant!</p>
    <%= link_to "Add the first restaurant", new_restaurant_path, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
