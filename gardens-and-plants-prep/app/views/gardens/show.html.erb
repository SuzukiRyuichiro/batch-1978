<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<div class="container mt-3">
  <div class="row gy-4">
    <% @garden.plants.each do |plant| %>
      <div class="col-4">
        <div class="card">
          <img src="<%= plant.image_url %>" class="card-img-top" alt="<%= plant.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= plant.name %></h5>
            <%= link_to "Delete", plant_path(plant), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "You sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row mt-3">
    <div class="col-12">
      <h2>Add a plant to <%= @garden.name %></h2>
    </div>
    <%= simple_form_for [@garden, @plant] do |f| %>
      <%= f.input :name %>
      <%= f.input :image_url %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
